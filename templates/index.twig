{% extends "base.twig" %}
{% block title %}Home{% endblock %}
{% block body %}

    <h3>Games</h3>

    <form action="/newGame" method="POST">
        <input id="name" name="name" type="text" class="form-control" v-model="name" placeholder="Your Name" required="">
        <button type="submit" class="btn btn-success">New Game</button>
    </form>

    <form action="/joinGame" method="POST">
        <input id="name" name="name" type="text" class="form-control" v-model="name" placeholder="Your Name" required="">
        <input id="code" name="code" type="text" class="form-control" v-model="code" placeholder="Game Code" required="">
        <button type="submit" class="btn btn-primary">Join Game</button>
    </form>

    <hr>
    <h3>Add a Category</h3>
    <form action="/addCategory" method="POST">
        <input id="category" name="category" type="text" class="form-control" placeholder="Category" required="">
        <button type="submit" class="btn btn-primary">Add Category</button>
    </form>

    <hr>
    <h3>Add a Question</h3>
    <form action="/addQuestion" method="POST">
        <select id="category" name="category" class="custom-select" required="">
            {% for c in categories %}
                <option value="{{ c["id"] }}">{{ c["text"] }}</option>
            {% endfor %}
        </select>
        <input id="question" name="question" type="text" class="form-control" placeholder="Question" required="">
        <button type="submit" class="btn btn-primary">Add Question</button>
    </form>
    

    <script type="text/javascript">
        Vue.component('modal', {
            template: '#modal-template'
        })
    
        var app = new Vue({
            el: '#app',
            delimiters: ["${","}"],
            data: {
                name: "",
                code: ""
            },
            methods: {
            }
        });
	</script>
{% endblock %}
{% block foot %}{% endblock %}
