{% extends "base.twig" %}
{% block title %}Question Manager{% endblock %}
{% block body %}

    <h3>Questions</h3>

   
	{% for q in questions %}
		<form action="/editQuestion/{{ q['id'] }}" method="POST">
			<div class="container">
			<div class="row">
			    <div class="col-sm-4">
			    	<select id="category" name="category" class="custom-select" required="">
			            {% for c in categories %}
			                <option value="{{ c["id"] }}" {% if q["category"] == c["id"] %}selected=""{% endif %}>{{ c["text"] }}</option>
			            {% endfor %}
			        </select>
			    </div>
			    <div class="col-sm-6">
			    	<input id="question" name="question" type="text" class="form-control" placeholder="Question" required="" value="{{ q['text'] }}">
			    </div>
			    <div class="col-sm-2">			
			    	<button class="btn btn-link" type="submit"><i class="fa fa-edit"></i></button>
					<button class="btn btn-link" type="button"><i class="fa fa-trash" onclick="deleteQuestion({{ q['id'] }})"></i></button>
				</div>
			</div>
			</div>
		</form>
	{% endfor %}

	    <a class="btn btn-primary" href="/">Home</a>


	 <hr>
    <h3>Add a Category</h3>
    <form action="/addCategory" method="POST">
        <input id="category" name="category" type="text" class="form-control" placeholder="Category" required="">
        <button type="submit" class="btn btn-primary">Add Category</button>
    </form>

    <hr>
    <h3>Add a Question</h3>
    <form action="/addQuestion" method="POST">
        <select id="category" name="category" class="custom-select" required="">
            {% for c in categories %}
                <option value="{{ c["id"] }}">{{ c["text"] }}</option>
            {% endfor %}
        </select>
        <input id="question" name="question" type="text" class="form-control" placeholder="Question" required="">
        <button type="submit" class="btn btn-primary">Add Question</button>
    </form>

	<script type="text/javascript">
		function deleteQuestion(qid){
			if(confirm("Are you sure you want to delete this question?")){
				window.location.href="/deleteQuestion/" + qid;
			}
		}
	</script>

    <script type="text/javascript">
        Vue.component('modal', {
            template: '#modal-template'
        })
    
        var app = new Vue({
            el: '#app',
            delimiters: ["${","}"],
            data: {
                name: "",
                code: ""
            },
            methods: {
            }
        });
	</script>
{% endblock %}
{% block foot %}{% endblock %}
